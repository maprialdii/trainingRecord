    protected void btnAdd_Click(object sender, EventArgs e)
    {
        if (!BioPM.ClassEngines.ValidationFactory.ValidateNullInput(txtOldPassword.Text))
        {
            ClientScript.RegisterStartupScript(this.GetType(), "myalert", "alert('" + BioPM.ClassEngines.ValidationFactory.GetErrorMessage(1, "CONFIRMATION PASSWORD", "") + "');", true);
        }
        if (!Session["password"].ToString().Equals(BioPM.ClassEngines.CryptographFactory.Encrypt(txtOldPassword.Text, true)))
        {
            ClientScript.RegisterStartupScript(this.GetType(), "myalert", "alert('" + "PASSWORD IS NOT RECOGNISED!" + "');", true);
        }
        else
        {
            string MsgEmail = "", MsgPassword = "";
            bool isChanged = false;

            if (!Session["email"].ToString().Equals(txtEmail.Text) && !(txtEmail.Text.Length == 0))
            {
                BioPM.ClassObjects.UserCatalog.UpdateEmail(Session["username"].ToString(), txtEmail.Text, Session["username"].ToString());
                MsgEmail = "Your Email Has Been Updated! ";
                isChanged = true;
            }

            if (!Session["password"].ToString().Equals(BioPM.ClassEngines.CryptographFactory.Encrypt(txtPassword.Text, true)) && !(txtPassword.Text.Length == 0))
            {
                if (!BioPM.ClassEngines.ValidationFactory.ValidatePasswordCombination(txtPassword.Text))
                {
                    ClientScript.RegisterStartupScript(this.GetType(), "myalert", "alert('" + BioPM.ClassEngines.ValidationFactory.GetErrorMessage(13, "PASSWORD", "") + "');", true);
                }
                else if (!BioPM.ClassEngines.ValidationFactory.ValidatePasswordConfirmation(txtPassword.Text, txtPasswordConfirm.Text))
                {
                    ClientScript.RegisterStartupScript(this.GetType(), "myalert", "alert('" + BioPM.ClassEngines.ValidationFactory.GetErrorMessage(11, "PASSWORD", "") + "');", true);
                }
                else
                {
                    BioPM.ClassObjects.UserCatalog.UpdateEmail(Session["username"].ToString(), txtPassword.Text, Session["username"].ToString());
                    MsgPassword = "Your Password Has Been Updated! ";
                    isChanged = true;
                }
            }

            if (isChanged) ClientScript.RegisterStartupScript(this.GetType(), "myalert", "alert('" + MsgEmail + MsgPassword + "');", true);
            else ClientScript.RegisterStartupScript(this.GetType(), "myalert", "alert('" + "NOTHING'S CHANGED" + "');", true);
        }
    }

    protected void btnCancel_Click(object sender, EventArgs e)
    {
        Response.Redirect("PageUserPanel.aspx");
    }
</script>
