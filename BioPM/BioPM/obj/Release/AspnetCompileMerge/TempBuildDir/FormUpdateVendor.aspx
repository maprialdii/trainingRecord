<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="FormUpdateVendor.aspx.cs" Inherits="BioPM.FormUpdateVendor" %>

<!DOCTYPE html>
<script runat="server">
    BioPM.ClassObjects.VendorGroup vendorgroup = new BioPM.ClassObjects.VendorGroup();
    protected void Page_Load(object sender, EventArgs e)
    {
        sessionCreator();
        if (!IsPostBack) SetDataToForm();
    }
    protected void sessionCreator()
    {
        Session["username"] = "K495";
        Session["name"] = "ALLAN PRAKOSA";
        Session["password"] = "admin1234";
        Session["role"] = "111111";
    }
    
    protected void SetDataVendor()
    {
        vendorgroup = BioPM.ClassEngines.ObjectFactory.GetDataVendorGroupByID(Session["vendorgroupid"].ToString());
        BioPM.ClassObjects.Vendor vendor = BioPM.ClassEngines.ObjectFactory.GetDataVendorByID(Request.QueryString["key"]);
        txtVendorID.Text = vendor.VendorID;
        txtVendorName.Text = vendor.VendorName;
        ddlVendorGroup.SelectedValue = vendor.VendorGroupID;
    }

    protected void SetVendorGroup()
    {
        ddlVendorGroup.Items.Clear();
        foreach (BioPM.ClassObjects.VendorGroup vendorgroup in BioPM.ClassEngines.ObjectFactory.GetAllDataVendorGroup())
        {
            ddlVendorGroup.Items.Add(new ListItem(vendorgroup.VendorGroupName, vendorgroup.VendorGroupID));
        }
    }

    
    protected void SetDataToForm()
    {
        SetVendorGroup();
        SetDataVendor();
    }

    protected void UpdateVendorIntoDatabase()
    {
        BioPM.ClassObjects.Vendor vendor = BioPM.ClassObjects.VendorFactory.CreateVendor(txtVendorID.Text, txtVendorName.Text, ddlVendorGroup.SelectedValue, "");
        BioPM.ClassEngines.ObjectFactory.UpdateDataVendor(vendor, Session["username"].ToString());
    }

    protected void btnUpdate_Click(object sender, EventArgs e)
    {
        if (IsPostBack) UpdateVendorIntoDatabase();
        Response.Redirect("PageVendor.aspx");
    }

    protected void btnCancel_Click(object sender, EventArgs e)
    {
        Response.Redirect("PageUserPanel.aspx");
    }
</script>

