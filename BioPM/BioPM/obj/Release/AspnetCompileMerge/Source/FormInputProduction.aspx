    protected void SetProductGroup()
    {
        ddlProductGroup.Items.Clear();
        foreach (BioPM.ClassObjects.ProductGroup group in BioPM.ClassEngines.ObjectFactory.GetAllDataProductGroup())
        {
            ddlProductGroup.Items.Add(new ListItem(group.ProductGroupName, group.ProductGroupID));
        }
    }
    
    protected void SetProduct()
    {
        ddlProductName.Items.Clear();
        foreach (BioPM.ClassObjects.Product product in BioPM.ClassEngines.ObjectFactory.GetDataProductByProductGroupID(ddlProductGroup.SelectedValue))
        {
            ddlProductName.Items.Add(new ListItem(product.ProductName, product.ProductID));
        }
    }

    protected void SetDataToForm()
    {
        SetProductGroup();
