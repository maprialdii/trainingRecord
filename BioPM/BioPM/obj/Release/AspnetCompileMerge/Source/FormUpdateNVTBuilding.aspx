<!DOCTYPE html>
<script runat="server">
    
    protected void Page_Load(object sender, EventArgs e)
    {
        if (Session["username"] == null && Session["password"] == null) Response.Redirect("PageLogin.aspx");
        if (Session["coctr"].ToString() != "52500" && Session["coctr"].ToString() != "64100") Response.Redirect("PageUserPanel.aspx");
        if (!IsPostBack) SetDataToForm();
    }
    protected void sessionCreator()
    {
        Session["username"] = "K495";
        Session["name"] = "ALLAN PRAKOSA";
        Session["password"] = "admin1234";
        Session["role"] = "111111";
    }


    protected void GetDataFromDatabase()
    {
        object[] values = BioPM.ClassObjects.NvtCatalog.GetDataNVTBuildingByID(Request.QueryString["key"]);
        txtBuilding.Text = values[1].ToString();
        txtInitialNumber.Text = values[3].ToString();
        txtNumberOfAnimal.Text = values[4].ToString();
        ddlAnimalType.SelectedValue = values[5].ToString();
    }

    protected void GetAnimalMonkeyType()
    {
        ddlAnimalType.Items.Clear();
        foreach (object[] data in BioPM.ClassObjects.AnimalRandomCatalog.GetAnimalMonkeyType())
        {
            ddlAnimalType.Items.Add(new ListItem(data[1].ToString(), data[0].ToString()));
        }
    }

    protected void SetDataToForm()
    {
        GetAnimalMonkeyType();
        GetDataFromDatabase();
    }

    protected void UpdateNVTBuildingOnDatabase()
    {
        BioPM.ClassObjects.NvtCatalog.UpdateNVTBuilding(Request.QueryString["key"], txtBuilding.Text, ddlAnimalType.SelectedValue, txtInitialNumber.Text, txtNumberOfAnimal.Text, Session["username"].ToString());
    }

    protected void btnAdd_Click(object sender, EventArgs e)
    {
        if (IsPostBack) UpdateNVTBuildingOnDatabase();
        Response.Redirect("PageNVTBuilding.aspx");
    }

    protected void btnCancel_Click(object sender, EventArgs e)
    {
        Response.Redirect("PageUserPanel.aspx");
    }
</script>

