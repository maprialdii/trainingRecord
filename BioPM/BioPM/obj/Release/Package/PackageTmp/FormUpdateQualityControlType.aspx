        Session["role"] = "111111";
    }

    protected void SetQualityControlTypeToForm()
    {
        BioPM.ClassObjects.QualityControlType qctype = BioPM.ClassEngines.ObjectFactory.GetDataQualityControlTypeByID(Request.QueryString["key"]);
        txtQualityControlTypeID.Text = qctype.QualityControlTypeID;
        txtQualityControlTypeName.Text = qctype.QualityControlTypeName;
        txtQualityControlTypeAlias.Text = qctype.QualityControlTypeAlias;
    }

    protected void UpdateQualityControlTypeOnDatabase()
    {
        BioPM.ClassObjects.QualityControlType qctype = BioPM.ClassObjects.QualityControlFactory.CreateQualityControlType(txtQualityControlTypeID.Text, txtQualityControlTypeName.Text, txtQualityControlTypeAlias.Text);
        BioPM.ClassEngines.ObjectFactory.UpdateDataQualityControlType(qctype, Session["username"].ToString());
    }

    protected void btnUpdate_Click(object sender, EventArgs e)
    {
        UpdateQualityControlTypeOnDatabase();
        Response.Redirect("PageQualityControlType.aspx");
    }

    protected void btnCancel_Click(object sender, EventArgs e)
    {
        Response.Redirect("PageUserPanel.aspx");
    }
</script>

