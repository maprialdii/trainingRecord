<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="PageSampleRawMaterialNPlanRandom.aspx.cs" Inherits="BioPM.PageSampleRawMaterialNPlanRandom" %>

<!DOCTYPE html>
<script runat="server">
    string batch, rnddt;
    protected void Page_Load(object sender, EventArgs e)
    {
        if (Session["username"] == null && Session["password"] == null) Response.Redirect("PageLogin.aspx");
        if (Session["id"] == null) Response.Redirect("PageUserPanel.aspx");
        if (Session["coctr"].ToString() != "52300" && Session["coctr"].ToString() != "64100") Response.Redirect("PageUserPanel.aspx");
        SetDataRawMaterial();
    }
    protected void sessionCreator()
    {     
        Session["username"] = "K495";
        Session["name"] = "ALLAN PRAKOSA";
        Session["password"] = "admin1234";
        Session["role"] = "111111";
    }
    
    protected void SetDataRawMaterial()
    {
        object[] values = BioPM.ClassObjects.RawMaterialCatalog.GetRawMaterialRandomDateByID(Session["id"].ToString());
        batch = values[0].ToString();
        rnddt = BioPM.ClassEngines.DateFormatFactory.GetDateFormat(values[2].ToString());
    }

    protected String GenerateDataRawMaterialSample()
    {
        string htmlelement = "";
        Session["idm"] = BioPM.ClassObjects.RawMaterialCatalog.GetRawMaterialMaxMaterialID(Session["id"].ToString()).ToString();
        int index = 1;
        foreach (object[] data in BioPM.ClassObjects.RawMaterialCatalog.GetRawMaterialNPlanSampleByID(Session["id"].ToString(), Session["idm"].ToString()))
        {
            htmlelement += "<tr class=''><td>" + index.ToString() + "</td><td>" + data[3].ToString() + "</td><td>" + data[4].ToString() + "</td></tr>";
            index++;
        }
        
        return htmlelement;
    }

   
</script>

