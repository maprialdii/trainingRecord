<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="FormUpdateStyle.aspx.cs" Inherits="BioPM.FormUpdateStyle" %>

<!DOCTYPE html>
<script runat="server">
    BioPM.ClassObjects.Item item = new BioPM.ClassObjects.Item();
    protected void Page_Load(object sender, EventArgs e)
    {
        sessionCreator();
        if (!IsPostBack) SetDataToForm();
    }
    protected void sessionCreator()
    {
        Session["username"] = "K495";
        Session["name"] = "ALLAN PRAKOSA";
        Session["password"] = "admin1234";
        Session["role"] = "111111";
    }
    
    protected void SetDataStyleToForm()
    {
        item = BioPM.ClassEngines.ObjectFactory.GetDataItemByID(Session["itemid"].ToString());
        BioPM.ClassObjects.Style style = BioPM.ClassEngines.ObjectFactory.GetDataStyleByID(Request.QueryString["key"]);
        txtStyleID.Text = style.StyleID;
        txtStyleName.Text = style.StyleName;
        ddlItem.SelectedValue = style.ItemID;
    }

    protected void SetItem()
    {
        ddlItem.Items.Clear();
        foreach (BioPM.ClassObjects.Item vendorgroup in BioPM.ClassEngines.ObjectFactory.GetAllDataItem())
        {
            ddlItem.Items.Add(new ListItem(vendorgroup.ItemName, vendorgroup.ItemID));
        }
    }

    
    protected void SetDataToForm()
    {
        SetItem();
        SetDataStyleToForm();
    }

    protected void UpdateStyleIntoDatabase()
    {
        BioPM.ClassObjects.Style vendor = BioPM.ClassObjects.ItemFactory.CreateStyle(txtStyleID.Text, txtStyleName.Text, ddlItem.SelectedValue, "", "", "", "");
        BioPM.ClassEngines.ObjectFactory.UpdateDataStyle(vendor, Session["username"].ToString());
    }

    protected void btnUpdate_Click(object sender, EventArgs e)
    {
        if (IsPostBack) UpdateStyleIntoDatabase();
        Response.Redirect("PageStyle.aspx?key=" + ddlItem.SelectedValue);
    }

    protected void btnCancel_Click(object sender, EventArgs e)
    {
        Response.Redirect("PageUserPanel.aspx");
    }
</script>

