<!DOCTYPE html>
<script runat="server">
    protected void Page_Load(object sender, EventArgs e)
    {
        sessionCreator();
        if (!IsPostBack) SetVaccineGroupToForm();
    }
    protected void sessionCreator()
    {
        Session["username"] = "K495";
        Session["name"] = "ALLAN PRAKOSA";
        Session["password"] = "admin1234";
        Session["role"] = "111111";
    }
    
    protected void SetVaccineGroupToForm()
    {
        BioPM.ClassObjects.VaccineGroup vaccine = BioPM.ClassEngines.ObjectFactory.GetDataVaccineGroupByID(Request.QueryString["key"]);
        txtVaccineGroupID.Text = vaccine.VaccineGroupID;
        txtVaccineGroupName.Text = vaccine.VaccineGroupName;
        txtVaccineGroupAlias.Text = vaccine.VaccineGroupAlias;
    }
        
    protected void UpdateVaccineGroupOnDatabase()
    {
        BioPM.ClassObjects.VaccineGroup vaccine = BioPM.ClassObjects.ProductFactory.CreateVaccineGroup(txtVaccineGroupID.Text, txtVaccineGroupName.Text, txtVaccineGroupAlias.Text);
        BioPM.ClassEngines.ObjectFactory.UpdateDataVaccineGroup(vaccine, Session["username"].ToString());
    }

    protected void btnUpdate_Click(object sender, EventArgs e)
    {
        UpdateVaccineGroupOnDatabase();
        Response.Redirect("PageVaccineGroup.aspx");
    }

    protected void btnCancel_Click(object sender, EventArgs e)
    {
        Response.Redirect("PageUserPanel.aspx");
    }
</script>

