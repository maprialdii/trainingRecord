<!DOCTYPE html>
<script runat="server">
    protected void Page_Load(object sender, EventArgs e)
    {
        sessionCreator();
        if (!IsPostBack) SetDataToForm();
    }
    protected void sessionCreator()
    {
        Session["username"] = "K495";
        Session["name"] = "ALLAN PRAKOSA";
        Session["password"] = "admin1234";
        Session["role"] = "111111";
    }

    protected void SetVaccineGroup()
    {
        ddlVaccineGroup.Items.Clear();
        foreach (BioPM.ClassObjects.VaccineGroup vaccine in BioPM.ClassEngines.ObjectFactory.GetAllDataVaccineGroup())
        {
            ddlVaccineGroup.Items.Add(new ListItem(vaccine.VaccineGroupName, vaccine.VaccineGroupID));
        }
    }

    protected void SetProductGroup()
    {
        ddlProductGroup.Items.Clear();
        foreach (BioPM.ClassObjects.ProductGroup group in BioPM.ClassEngines.ObjectFactory.GetDataProductGroupByVaccineGroupID(ddlVaccineGroup.SelectedValue))
        {
            ddlProductGroup.Items.Add(new ListItem(group.ProductGroupName, group.ProductGroupID));
        }
    }

    protected void SetProductType()
    {
        ddlProductType.Items.Clear();
        foreach (BioPM.ClassObjects.ProductType type in BioPM.ClassEngines.ObjectFactory.GetAllDataProductType())
        {
            ddlProductType.Items.Add(new ListItem(type.ProductTypeName, type.ProductTypeID));
        }
    }
    
    protected void SetProductToForm()
    {
        BioPM.ClassObjects.Product product = BioPM.ClassEngines.ObjectFactory.GetDataProductByID(Request.QueryString["key"]);
        txtProductID.Text = product.ProductID;
        txtProductName.Text = product.ProductName;
        txtProductAlias.Text = product.ProductAlias;
        txtProductUnit.Text = product.ProductUnit;
        txtSpecification.Text = product.ProductSpecification;
        txtStorage.Text = product.ProductStorage;
        ddlVaccineGroup.SelectedValue = product.VaccineGroupID;
        ddlProductGroup.SelectedValue = product.ProductGroupID;
        ddlProductType.SelectedValue = product.ProductTypeID;    
    }

    protected void SetDataToForm()
    {
        SetVaccineGroup();
        SetProductGroup();
        SetProductType();
        SetProductToForm();
    }

    protected void ddlVaccineGroup_SelectedIndexChanged(object sender, EventArgs e)
    {
        if (IsPostBack)
        {
            SetProductGroup();
        }
    }
        
    protected void UpdateProductOnDatabase()
    {
        BioPM.ClassObjects.Product product = BioPM.ClassObjects.ProductFactory.CreateProduct(txtProductID.Text, txtProductName.Text, txtProductAlias.Text, txtProductUnit.Text, txtSpecification.Text, txtStorage.Text, ddlProductType.SelectedValue, "", "", ddlProductGroup.SelectedValue, "", "", ddlVaccineGroup.SelectedValue, "", "");
        BioPM.ClassEngines.ObjectFactory.UpdateDataProduct(product, Session["username"].ToString());
    }

    protected void btnUpdate_Click(object sender, EventArgs e)
    {
        if (IsPostBack) UpdateProductOnDatabase();
        Response.Redirect("PageProduct.aspx");
    }

    protected void btnCancel_Click(object sender, EventArgs e)
    {
        Response.Redirect("PageUserPanel.aspx");
    }
</script>

